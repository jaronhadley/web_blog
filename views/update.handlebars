<div class="row text-left">
  <form class="new-post-form">  
    <div class="col-md-12 card">
        <div class="row card-header">
        <div class="col-md-8">
            <h2><input class="form-input" type="text" id="post-title" name="post-title" placeholder={{title}}></input></h2>
        </div>
        <div class="col-md-4 text-right mt-3">
            <p>Created by {{user.name}} on {{format_date date_created}}</p>
        </div>
        </div>
        <div class="card-body">
            <label for="post-cont"></label>
            <textarea class="form-input" id="post-cont" name="post-cont">{{contents}}</textarea>
        </div>
        <div class="form-group p-3">
            <button type="submit" class="btn btn-primary">UPDATE</button>
        </div>
    </div>
  </form>
</div>

<script src="/js/update.js"></script>